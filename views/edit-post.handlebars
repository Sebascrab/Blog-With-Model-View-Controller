


<div class="container has-background-warning-light is-fullheight">
      <div class="hero is-large">
          <a href="/dashboard" class="is-pulled-right">Back To Dashboard</a>
        <h1 class="is-size-1 has-text-centered has-text-weight-bold">Edit Post</h1>
          <div class="hero-body columns" class="edit-post-form">
              <div class="column is-two-thirds is-flex is-flex-direction-column box has-background-info-light">
                  <div class="label">
                      <label for="post-title"> Post Title:</label>
                      <input class="input is-dark" type="text" name="post-title" value="{{post.title}}" />
                  </div>
                  <div class="label">
                      <label for="post-content">Post Content:</label>
                      <input class="textarea is-large is-dark" name="post-content" value="{{post.post._content}}" />
                  </div>
                  <div class="is-pulled-right">
                      created by you on {{format_date post.created_at}}
                      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
                  </div>
                  <div class="column">
                      <button class="button has-background-info-dark has-text-success-light is-pulled-right" type="submit">Save Post</button>
                      <button type="button" class="button has-background-info-dark has-text-success-light is-pulled-right delete-post-btn">Delete Post</button>
                  </div>
              </div>
          </div>
      </div>
  </div>

  <script src="/javascript/edit-post.js"></script>
  <script src="/javascript/delete-post.js"></script>
  <script src="/javascript/comment.js"></script>